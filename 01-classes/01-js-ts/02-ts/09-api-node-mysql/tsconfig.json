{
    "ts-node": {
        "files": true,
        // Do not forget to `npm i -D tsconfig-paths`
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "rootDir": "./src",
        "typeRoots": ["src/types", "./node_modules/@types"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "src/*": ["./src/*"]
        }
    },
    "include": ["src/"]
}
